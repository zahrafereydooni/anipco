<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alik.anipco_co.Article"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <Button
    android:id="@+id/knxpdf"
    android:layout_margin="@dimen/_10sdp"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="0.25"
    android:background="@drawable/shape"
    android:textColor="#fffbb0"
    android:textSize="@dimen/_14sdp"
    android:text="معرفي ساختمان هوشمند با استفاده از پروتكلKNX"></Button>
    <Button
        android:id="@+id/maghaleh"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/shape"
        android:textColor="#fffbb0"
        android:textSize="@dimen/_14sdp"
        android:text=" سامانه مديريت يكپارچه و هوشمند ساختمان BMS"></Button>
    <Button
        android:id="@+id/bmspdf"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/shape"
        android:textColor="#fffbb0"
        android:textSize="@dimen/_14sdp"
        android:text="سیستم مدیریت هوشمند ساختمان "
       ></Button>
    <Button
        android:id="@+id/energypdf"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/shape"
        android:textColor="#fffbb0"
        android:textSize="@dimen/_14sdp"
        android:text="Energy Effiency with KNX"></Button>
</LinearLayout>
